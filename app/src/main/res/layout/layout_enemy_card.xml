<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/enemy_card_scroll_view"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="56dp"
        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/enemy_card_layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/enemy_card_image_view1"
                android:layout_width="240dp"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:layout_marginStart="60dp"
                android:src="@drawable/spr_py_orange_house_card"
                android:contentDescription="TODO" />

            <ImageView
                android:id="@+id/enemy_card_image_view4"
                android:layout_width="240dp"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                android:layout_marginTop="-250dp"
                android:layout_marginStart="60dp"
                android:src="@drawable/spr_py_orange_house_card"
                android:contentDescription="TODO" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <ImageView
            android:id="@+id/enemy_card_image_view2"
            android:layout_width="240dp"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:layout_marginTop="20dp"
            android:layout_marginStart="120dp"
            app:layout_constraintLeft_toRightOf="@id/enemy_card_layout1"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/spr_py_brown_house_card"
            android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/enemy_card_image_view3"
            android:layout_width="360dp"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toRightOf="@id/enemy_card_image_view2"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/spr_card_placeholder"
            android:contentDescription="TODO" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</HorizontalScrollView>