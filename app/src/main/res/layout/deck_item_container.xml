<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pool_bg"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/placeholder_action_image_view"
        android:layout_width="110dp"
        android:layout_height="120dp"
        android:contentDescription="TODO"
        android:scaleType="fitCenter"
        android:src="@drawable/spr_py_act_go_pass"
        android:visibility="gone"
        android:layout_marginBottom="260dp"
        android:layout_marginStart="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/asset_view_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="80dp"
            android:paddingEnd="80dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/placeholder_money_image_view"
            />

        <ImageView
            android:id="@+id/placeholder_money_image_view"
            android:layout_width="125dp"
            android:layout_height="110dp"
            android:layout_marginTop="-30dp"
            android:contentDescription="TODO"
            android:rotation="271"
            android:scaleType="fitStart"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

<!--        <ImageView-->
<!--            android:id="@+id/chosen_card_image_view"-->
