<!--            android:scaleType="fitCenter"-->
<!--            android:src="@drawable/spr_py_2m_card"-->
<!--            android:visibility="gone"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent" />-->

        <ImageView
            android:id="@+id/next_image_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="TODO"
            android:scaleType="fitStart"
            android:visibility="visible"
            android:layout_marginBottom="20dp"
            android:src="@drawable/spr_ui_next_arrow"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/player_view_pager_layout" />

        <ImageView
            android:id="@+id/prev_image_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="TODO"
            android:scaleType="fitStart"
            android:visibility="visible"
            android:scaleX="-1"
            android:layout_marginBottom="20dp"
            android:src="@drawable/spr_ui_next_arrow"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/player_view_pager_layout" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/player_view_pager_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/player_view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="80dp"
                android:paddingEnd="80dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/chosen_card_image_view"
            android:layout_width="200dp"
            android:layout_height="333dp"
            android:contentDescription="TODO"
            android:scaleType="fitCenter"
            android:src="@drawable/spr_py_orange_house_card"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dummy_delay_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        />

</androidx.constraintlayout.widget.ConstraintLayout>